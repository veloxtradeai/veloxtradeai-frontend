# ====================================
# VELOXTRADEAI - ENVIRONMENT VARIABLES
# ====================================

# API Configuration
VITE_API_BASE_URL=https://veloxtradeai-api.velox-trade-ai.workers.dev
VITE_FRONTEND_URL=https://veloxtradeai-frontend.pages.dev

# Application Settings
VITE_APP_NAME=VeloxTradeAI
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=production

# Trading Settings
VITE_MAX_RISK_PER_TRADE=2.5
VITE_MIN_CONFIDENCE=85
VITE_SIGNAL_EXPIRE_MINUTES=15

# Market Data
VITE_MARKET_OPEN_HOUR=9
VITE_MARKET_CLOSE_HOUR=15
VITE_MARKET_DAYS=1,2,3,4,5  # Monday to Friday

# Broker Integration
VITE_ZERODHA_REDIRECT_URI=https://veloxtradeai-frontend.pages.dev/broker/callback
VITE_ANGEL_REDIRECT_URI=https://veloxtradeai-frontend.pages.dev/broker/callback

# Feature Flags
VITE_ENABLE_REALTIME_SIGNALS=true
VITE_ENABLE_AUTO_ADJUST=true
VITE_ENABLE_BROKER_INTEGRATION=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true

# WebSocket Configuration
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_HEARTBEAT_INTERVAL=30000

# Analytics
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX  # Optional
VITE_HOTJAR_ID=XXXXXXXX  # Optional

# Security
VITE_JWT_EXPIRE_HOURS=24
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=60

# Performance
VITE_CACHE_TTL=300000  # 5 minutes
VITE_DATA_FETCH_INTERVAL=30000  # 30 seconds
