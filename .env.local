# ========================
# VELOXTRADEAI FRONTEND - PRODUCTION
# ========================

# Backend API URL (REAL WORKING BACKEND)
VITE_API_BASE_URL=https://veloxtradeai-api.velox-trade-ai.workers.dev

# NEVER USE MOCK/FAKE/DEMO DATA
VITE_USE_MOCK_DATA=false
VITE_ENABLE_MOCK_API=false
VITE_SHOW_DUMMY_DATA=false
VITE_USE_DEMO_MODE=false

# App Settings
VITE_APP_NAME=VeloxTradeAI
VITE_APP_VERSION=3.0.0
VITE_APP_ENV=production
VITE_DEBUG=false
VITE_LOG_LEVEL=error

# Feature Flags (ALL ENABLED)
VITE_ENABLE_HINDI=true
VITE_ENABLE_THEME_SWITCHER=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_BROKER_INTEGRATION=true
VITE_ENABLE_AI_SIGNALS=true
VITE_ENABLE_AUTO_TRADE=true
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_PORTFOLIO_TRACKING=true

# Broker Integration (REAL BROKERS)
VITE_ZERODHA_REDIRECT_URI=https://veloxtradeai-frontend.pages.dev/broker/callback
VITE_ANGEL_REDIRECT_URI=https://veloxtradeai-frontend.pages.dev/broker/callback
VITE_UPSTOX_REDIRECT_URI=https://veloxtradeai-frontend.pages.dev/broker/callback
VITE_GROWW_REDIRECT_URI=https://veloxtradeai-frontend.pages.dev/broker/callback

# WebSocket Configuration
VITE_WS_URL=wss://veloxtradeai-api.velox-trade-ai.workers.dev/ws
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_HEARTBEAT_INTERVAL=30000

# Subscription & Pricing
VITE_FREE_TRIAL_DAYS=7
VITE_SUBSCRIPTION_PLANS=free_trial,monthly,quarterly,yearly
VITE_PLAN_MONTHLY_PRICE=999
VITE_PLAN_QUARTERLY_PRICE=2699
VITE_PLAN_YEARLY_PRICE=9999

# Real-time Data Refresh Intervals (in milliseconds)
VITE_MARKET_DATA_REFRESH=30000
VITE_PORTFOLIO_REFRESH=60000
VITE_SIGNALS_REFRESH=15000
VITE_ALERTS_REFRESH=10000

# Security Settings
VITE_TOKEN_REFRESH_INTERVAL=3540000
VITE_SESSION_TIMEOUT=3600000
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_ENABLE_2FA=true

# Analytics & Monitoring
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXX
VITE_SENTRY_DSN=
VITE_LOGROCKET_ID=

# Performance Settings
VITE_ENABLE_CACHING=true
VITE_CACHE_DURATION=300000
VITE_MAX_CACHE_SIZE=50
VITE_ENABLE_LAZY_LOADING=true

# UI/UX Settings
VITE_DEFAULT_THEME=dark
VITE_DEFAULT_LANGUAGE=en
VITE_ENABLE_ANIMATIONS=true
VITE_ANIMATION_DURATION=300

# Market Hours (Indian Standard Time)
VITE_MARKET_OPEN_HOUR=9
VITE_MARKET_OPEN_MINUTE=15
VITE_MARKET_CLOSE_HOUR=15
VITE_MARKET_CLOSE_MINUTE=30

# Risk Management Defaults
VITE_DEFAULT_STOP_LOSS=2
VITE_DEFAULT_TARGET=4
VITE_MAX_RISK_PER_TRADE=2
VITE_MAX_DAILY_LOSS=5
VITE_MAX_POSITIONS=5

# AI Configuration
VITE_AI_CONFIDENCE_THRESHOLD=85
VITE_AI_SIGNAL_VALIDITY=30
VITE_AI_MAX_SIGNALS_PER_DAY=20
VITE_AI_MIN_VOLUME=100000

# API Rate Limiting
VITE_API_RATE_LIMIT=60
VITE_API_RATE_WINDOW=60000

# Error Handling
VITE_MAX_RETRY_ATTEMPTS=3
VITE_RETRY_DELAY=1000
VITE_SHOW_ERROR_DETAILS=false
